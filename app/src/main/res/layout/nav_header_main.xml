<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
   android:orientation="vertical"
    android:gravity="bottom">

    <LinearLayout
        android:id="@+id/raiseLyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView

        android:id="@+id/raiseTicket"
        android:drawableRight="@drawable/arrow1"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"

        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing" android:text="Raise Ticket"
        android:textSize="18dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_red_dark"
        />
    </LinearLayout>

    <TextView
        android:drawableRight="@drawable/arrow1"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:textSize="18dp"

        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing" android:text="View Ticket"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:id="@+id/viewTicket"

        />
<View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@android:color/holo_red_dark"
    />
    <LinearLayout
        android:id="@+id/ticketLyt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        >


        <TextView

            android:id="@+id/pendingTicket"
            android:drawableRight="@drawable/arrow1"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"

            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing" android:text="Pending Ticket"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_red_dark"
            />
        <TextView
            android:id="@+id/resolvedTicket"
            android:drawableRight="@drawable/arrow1"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing" android:text="Resolved Ticket"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_red_dark"
            />
        <TextView
            android:id="@+id/sendTicket"
            android:drawableRight="@drawable/arrow1"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"

            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing" android:text="Send Ticket"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_red_dark"
            />
        <TextView
            android:id="@+id/outboxTicket"
            android:drawableRight="@drawable/arrow1"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"

            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing" android:text="Ticket In Outbox"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_red_dark"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/contactLyt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView

            android:id="@+id/contactTxt"
            android:drawableRight="@drawable/arrow1"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"

            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing" android:text="Contact Us"
            android:textSize="18dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_red_dark"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/feedbackLyt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >

    <TextView

        android:id="@+id/admin"
        android:drawableRight="@drawable/arrow1"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:textSize="18dp"

        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing" android:text="Admin"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_red_dark"
        />
        </LinearLayout>

</LinearLayout>
